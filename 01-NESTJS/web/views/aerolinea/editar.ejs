<%- include('../comunes/cabecera') %>
<div class='container'>
    <% const existeMensaje = typeof aerolinea !== 'undefined'%>
    <% if(existeMensaje){%>
    <ul>
        <li><a  href= '/aero/lista-aerolinea'> Regresar a Lista de aerolineas</a></li>
    </ul>
    <h1 style="text-align:center">Editar Aerolinea</h1>
    <form action="/aero/editar-aerolinea-formulario" method="post">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre*</label>
            <input placeholder="Ej: Tame" type="text" name="nombre" class="form-control" id="nombre"  value="<%=aerolinea.nombreair%>" aria-describedby="ayudaNombre">
            <div id="ayudaNombre" class="form-text">Ingrese Nombre</div>
        </div>
        <div class="mb-3">
            <label for="anio" class="form-label">Año Creacion*</label>
            <input placeholder="Ej: 1984" type="number" name="anio" class="form-control" id="anio"  min="1901" max="2021" value="<%=aerolinea.anio_creacion%>" aria-describedby="ayudaAnio">
            <div id="ayudaAnio" class="form-text">Ingrese Año de Creacion</div>
        </div>
        <div class="mb-3">
            <label for="vuelo" class="form-label">Numero Vuelos*</label>
            <input placeholder="Ej: 5" type="number" name="vuelo" class="form-control" id="vuelo"  min="1"  value="<%=aerolinea.vuelo%>" aria-describedby="ayudaVuelo">
            <div id="ayudaVuelo" class="form-text">Ingrese el nuevo numero de vuelos</div>
        </div>
        <div class="mb-3">
            <label for="activa" class="form-label">Aerolinea Activa*</label>
            <select id="activa" name="activa">
                <option value="true">Si</option>
                <option value="false">No</option>
            </select>
            <div id="ayudaAerolinea" class="form-text">Seleccione si la aerolinea se encuentra activa</div>
        </div>
        <div class="mb-3">
            <label for="pais_origen" class="form-label">Pais_Origen*</label>
            <input placeholder="Ej: Estados Unidos" type="text" name="pais_origen" class="form-control" id="pais_origen" value="<%=aerolinea.pais_origen%>" aria-describedby="ayudaPais">
            <div id="ayudaPais" class="form-text">Ingrese el pais de origen</div>
        </div>
        <input type="hidden" id="idAerolinea" name="aerolineaId" value="<%=aerolinea.id%>">
        <button type="submit" class="btn btn-warning w-100">Guardar Cambios</button>
    </form>
</div>
<%}%>
<%- include('../comunes/footer') %>